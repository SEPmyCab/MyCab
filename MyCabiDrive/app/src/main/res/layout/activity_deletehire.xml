<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pathum.mycabpickme.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/IV_MyCabLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_cab_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Decline Selected Hire "
        android:id="@+id/TV_pleaseLogin"
        android:layout_below="@+id/IV_MyCabLogo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/background_material_dark" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User :"
        android:id="@+id/TV_u2"
        android:layout_below="@+id/TV_pleaseLogin"

        android:textColor="#2A679E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=".............. "
        android:id="@+id/TV_usr"
        android:layout_below="@+id/TV_u2"
        android:textColor="#2A679E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hire Destination"
        android:id="@+id/TV_d1"
        android:layout_below="@+id/TV_usr"

        android:textColor="#2A679E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=".............. "
        android:id="@+id/TV_desti"
        android:layout_below="@+id/TV_d1"

        android:textColor="#2A679E" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete Hire"
        android:id="@+id/B_delete_hire"
        android:background="@color/darkBlue"
        android:textColor="@color/white"
        android:onClick="onClick"
        android:layout_below="@+id/TV_d1"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        android:text="Cancel"
        android:id="@+id/B_cancel1"
        android:layout_below="@+id/B_delete_hire"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:onClick="onClick"/>

</RelativeLayout>