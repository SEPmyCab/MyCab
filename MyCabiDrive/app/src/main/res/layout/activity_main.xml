<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pathum.mycabidrive.MainActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/SV_register"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/IV_MyCabLogo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/my_cab_logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:id="@+id/textWelcome"
                android:textStyle="bold"
                android:layout_alignTop="@+id/IV_MyCabLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="88dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Start Hire"
                android:id="@+id/B_startHire"
                android:layout_below="@+id/textWelcome"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:onClick="onClick"/>


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Edit Vehicle Details"
                android:id="@+id/B_EditVehicle"
                android:layout_below="@+id/B_startHire"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="onClick"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Edit Personal Details"
                android:id="@+id/B_EditPersonal"
                android:layout_below="@+id/B_EditVehicle"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="onClick"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add New Vehicle"
                android:id="@+id/B_AddNew"
                android:layout_below="@+id/B_EditPersonal"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="onClick"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Delete Vehicle"
                android:id="@+id/B_Delete"
                android:layout_below="@+id/B_AddNew"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="onClick"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cancel Hire"
                android:id="@+id/B_cancelHire"
                android:layout_below="@+id/B_Delete"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="onClick"/>

            </RelativeLayout>
    </ScrollView>


</RelativeLayout>
