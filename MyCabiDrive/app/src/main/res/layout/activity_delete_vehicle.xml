<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pathum.mycabidrive.DeleteVehicleActivity">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your NIC and Registration Number of vehicle to delete..."
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Register Number"
        android:id="@+id/TV_regnod"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:textColor="#2A679E" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="21px"
        android:ems="10"
        android:id="@+id/ET_Reg_Nod"

        android:layout_below="@+id/TV_regnod"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your NIC"
        android:id="@+id/TV_NICd"
        android:layout_below="@+id/ET_Reg_Nod"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:textColor="#2A679E" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="21px"
        android:ems="10"
        android:id="@+id/ET_NICd"

        android:layout_below="@+id/TV_NICd"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/gray"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete Vehicle"
        android:id="@+id/B_delete_vehicle"
        android:background="@color/darkBlue"
        android:textColor="@color/white"
        android:onClick="onClick"
        android:layout_below="@+id/ET_NICd"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true" />
</RelativeLayout>
