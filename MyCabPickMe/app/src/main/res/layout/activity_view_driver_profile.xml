<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pathum.mycabpickme.ViewDriverProfile">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >


            <EditText

                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="36px"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/driverName"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:editable="false"
                android:enabled="false"
                android:textColor="#070707"
                android:singleLine="true" />

            <EditText
                android:editable="false"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="36px"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/driverVehical"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:textColor="#070707" />

            <EditText
                android:editable="false"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="36px"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/driverStatus"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:textColor="#070707" />

            <EditText
                android:editable="false"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="36px"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/driverPhoneNumber"
                android:hint="+9471XXXXXXX"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"
                android:layout_alignRight="@+id/textView6"
                android:layout_alignEnd="@+id/textView6"
                android:textColor="#070707" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/my_cab_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Diver Profile"
                android:id="@+id/textView6"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:textColor="#2A679E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Vehical"
                android:id="@+id/textView9"
                android:layout_below="@+id/driverName"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Status"
                android:id="@+id/textView10"
                android:layout_below="@+id/driverVehical"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone Number"
                android:id="@+id/textView11"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E"
                android:layout_below="@+id/driverStatus" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:id="@+id/btn_Call"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClick"
                android:layout_below="@+id/textView11"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get My Locaton"
                android:id="@+id/btn_getLocation"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClick"
                android:layout_below="@+id/driverPhoneNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Driver"
                android:id="@+id/btn_ReportDriverProfile"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClick"
                android:layout_below="@+id/btn_getLocation"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate Driver"
                android:id="@+id/btn_RateDriverProfile"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClick"
                android:layout_below="@+id/btn_ReportDriverProfile"
                />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
