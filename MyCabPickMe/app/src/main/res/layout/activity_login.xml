<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.pathum.mycabpickme.LoginActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/SV_login"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/IV_MyCabLogo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/my_cab_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PLEASE LOGIN"
                android:id="@+id/TV_pleaseLogin"
                android:layout_below="@+id/IV_MyCabLogo"
                android:layout_centerHorizontal="true"
                android:textColor="#2A679E" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:id="@+id/TV_email"
                android:layout_below="@+id/TV_pleaseLogin"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="textEmailAddress"

                android:ems="10"
                android:id="@+id/ET_email"
                android:layout_below="@+id/TV_email"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Password"
                android:id="@+id/TV_password"
                android:layout_below="@+id/ET_email"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="#2A679E" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textSize="21px"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/ET_Password"
                android:layout_below="@+id/TV_password"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/gray"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:id="@+id/B_login"
                android:background="@color/darkBlue"
                android:textColor="@color/white"
                android:layout_below="@+id/ET_Password"
                android:layout_marginTop="20dp"
                android:layout_centerVertical="true"
                android:onClick="onClick"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:id="@+id/B_forgotPassword"
                android:layout_below="@+id/B_login"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightBlue"
                android:textColor="@color/white"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Register Here"
                android:id="@+id/B_registerHere"
                android:layout_below="@+id/B_forgotPassword"
                android:layout_marginTop="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/lightBlue"
                android:textColor="@color/white"
                android:onClick="onClick"/>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
